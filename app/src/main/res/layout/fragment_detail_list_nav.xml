<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    tools:context="com.example.AndroidAssignment.Assignment7.ListView.DetailFragmentListNav">


    <ImageView
        android:id="@+id/imgFoodDetail"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/girl1" />

    <TextView
        android:id="@+id/txtNameFoodDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="310dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="370dp"
        android:background="@color/white"
        android:padding="5dp"
        android:text="Tên sản phẩm"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtCostFoodDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="370dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="310dp"
        android:textSize="15sp"
        android:text="Giá sản phẩm"
        android:padding="5dp"
        android:background="@color/white"
        android:textColor="#FF0000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtInforFoodDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:textSize="15sp"
        android:layout_marginTop="430dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="240dp"
        android:padding="5dp"
        android:background="@color/white"
        android:textColor="@color/black"
        android:text="Thông tin mô tả sản phẩm" />

    <Button
        android:id="@+id/btnUpdateDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:layout_marginStart="10dp"
        android:text="Update" />

</FrameLayout>