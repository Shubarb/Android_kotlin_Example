<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#202020">

    <ImageView
        android:id="@+id/imgThreePoints"
        android:layout_width="30dp"
        android:layout_height="55dp"
        android:layout_marginStart="5dp"
        app:srcCompat="@drawable/three_points" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="5dp">
        <TextView
            android:id="@+id/txtNamePhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:text="Shubarb Trần"
            android:textSize="18sp"
            android:textColor="#BFBFBF"/>

        <TextView
            android:id="@+id/txtNumberPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="điện thoại:0363814085"
            android:layout_marginStart="15dp"
            android:textSize="15sp"
            android:textColor="#7E7C7C"/>

    </LinearLayout>

</LinearLayout>